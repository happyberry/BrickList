<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/source_header">

        <EditTextPreference
            app:key="url"
            app:title="@string/url_title"
            app:defaultValue="http://fcds.cs.put.poznan.pl/MyWeb/BL/"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/display_header">

        <SwitchPreferenceCompat
            app:key="display"
            app:title="@string/display_title"
            app:summaryOff="@string/summary_off"
            app:summaryOn="@string/summary_on"
            app:defaultValue="false"
            />
    </PreferenceCategory>


        <SwitchPreferenceCompat
            app:key="display"
            app:title="Display using tips"
            app:defaultValue="true"
            app:isPreferenceVisible="false"
            />
</PreferenceScreen>
